{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "topology-core": ["libs/topology"],
      "topology-core/*": ["libs/topology/*"],
      "topology-flow-diagram": ["libs/topology-flow-diagram"],
      "topology-activity-diagram": ["libs/topology-activity-diagram"],
      "topology-class-diagram": ["libs/topology-class-diagram"],
      "topology-sequence-diagram": ["libs/topology-sequence-diagram"]
    }
  }
}
